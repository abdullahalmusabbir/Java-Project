<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="655.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddItemController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="12.0" style="-fx-background-color: #c4c0c0;" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Book ">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="booktitle" alignment="CENTER" prefHeight="30.0" promptText="Title">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="bookcat" alignment="CENTER" prefHeight="30.0" promptText="Category">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="bookauthor" alignment="CENTER" prefHeight="30.0" promptText="Author">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="bookpbyear" alignment="CENTER" prefHeight="30.0" promptText="Publish Year">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="bookpbname" alignment="CENTER" prefHeight="30.0" promptText="Publisher Name">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#bookAdd" prefHeight="30.0" prefWidth="150.0" text="Add">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="12.0" style="-fx-background-color: #c4c0c0;" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Publication">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="pubtitle" alignment="CENTER" prefHeight="30.0" promptText="Title">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="pubcat" alignment="CENTER" prefHeight="30.0" promptText="Category">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="pubauthor" alignment="CENTER" prefHeight="30.0" promptText="Author">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="pubname" alignment="CENTER" prefHeight="30.0" promptText="Publisher Name">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label alignment="CENTER" text="Is Journal">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="16.0" />
                     </HBox.margin>
                  </Label>
                  <RadioButton mnemonicParsing="false" text="Yes">
                     <HBox.margin>
                        <Insets right="8.0" />
                     </HBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="isJournal" />
                     </toggleGroup>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="No" toggleGroup="$isJournal">
                     <font>
                        <Font size="14.0" />
                     </font></RadioButton>
               </children>
            </HBox>
            <TextField fx:id="pubyear" alignment="CENTER" prefHeight="30.0" promptText="Publish Year">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#pubAdd" prefHeight="30.0" prefWidth="150.0" text="Add">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="12.0" style="-fx-background-color: #c4c0c0;" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Movie">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="movieTitle" alignment="CENTER" prefHeight="30.0" promptText="Title">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="movieCat" alignment="CENTER" prefHeight="30.0" promptText="Category">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="moviedirector" alignment="CENTER" prefHeight="30.0" promptText="Director">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="movieRelease" alignment="CENTER" prefHeight="30.0" promptText="Release Year">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#movieAdd" prefHeight="30.0" prefWidth="150.0" text="Add">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
   </padding>
</HBox>
